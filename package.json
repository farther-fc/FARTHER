{
  "name": "farther",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build",
    "build:web": "dotenv -- turbo build:web",
    "dev": "dotenvx run -f .env -- turbo dev",
    "dev:prod": "dotenvx run -f .env.production -- turbo dev",
    "dev:staging": "dotenvx run -f .env.staging -- turbo dev",
    "lint": "turbo lint --log-prefix=none",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:staging": "pnpm --filter=backend start:staging",
    "start:prod": "pnpm --filter=backend start:prod"
  },
  "devDependencies": {
    "@farther/typescript-config": "workspace:*",
    "@types/node": "^20.11.5",
    "@types/underscore": "^1.11.15",
    "eslint-plugin-unused-imports": "^3.1.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.8+sha512.d1a029e1a447ad90bc96cd58b0fad486d2993d531856396f7babf2d83eb1823bb83c5a3d0fc18f675b2d10321d49eb161fece36fe8134aa5823ecd215feed392",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.3.0",
    "dotenv-vault": "^1.26.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "graphql": "^16.8.1"
    }
  }
}
